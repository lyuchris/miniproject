<%= form_for @ad, :url => ads_path  do |f| %>

  
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>


    <%= f.label :description, "Description" %>
    <%= f.text_area :description %>

    <%= f.label :price, "Price" %>
    <%= f.text_area :price %>

    <%= f.label :email, "Email" %>
    <%= f.text_area :email %>

    <%= f.label :img_url, "請提供img_url" %>
    <%= f.text_area :img_url %>

   
  
    <%= f.submit "Create", :class => "btn btn-primary" %>
<% end %>


